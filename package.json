{
  "name": "cc-desktop",
  "version": "1.6.45",
  "description": "CC Desktop - Claude Code CLI 桌面启动器",
  "main": "src/main/index.js",
  "author": "HydroCoder",
  "license": "SEE LICENSE IN LICENSE",
  "scripts": {
    "postinstall": "electron-rebuild -f -w better-sqlite3,node-pty",
    "rebuild:sqlite": "electron-rebuild -f -w better-sqlite3 -o better-sqlite3",
    "dev": "concurrently -k \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "cross-env NODE_ENV=development VITE_DEV_SERVER_URL=http://localhost:5173/ electron .",
    "start": "electron .",
    "build": "npm run build:vue && electron-builder",
    "build:win": "npm run build:vue && electron-builder --win",
    "build:mac": "npm run build:vue && electron-builder --mac",
    "build:mac:local": "npm run build:vue && electron-builder --mac dmg && bash scripts/local-package-mac.sh",
    "build:win:local": "npm run build:vue && electron-builder --win nsis && powershell -ExecutionPolicy Bypass -File scripts\\local-package-win.ps1",
    "build:linux": "npm run build:vue && electron-builder --linux",
    "build:vue": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.37",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "better-sqlite3": "^12.6.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "https-proxy-agent": "^7.0.6",
    "js-yaml": "^4.1.1",
    "marked": "^15.0.12",
    "naive-ui": "^2.43.2",
    "node-pty": "^1.1.0",
    "uuid": "^9.0.0",
    "vue": "^3.5.26"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.0",
    "@playwright/test": "^1.58.2",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/coverage-v8": "^2.1.8",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.0.0",
    "playwright": "^1.58.2",
    "vite": "^5.4.21",
    "vite-plugin-electron": "^0.28.8",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vitest": "^2.1.8"
  },
  "build": {
    "appId": "com.hydrocoder.cc-desktop",
    "productName": "CC Desktop",
    "artifactName": "CC-Desktop-${version}-${platform}-${arch}.${ext}",
    "publish": [
      {
        "provider": "github",
        "owner": "hydroCoderClaud",
        "repo": "cc-desktop",
        "releaseType": "draft"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/.bin"
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/node-pty/**/*",
      "node_modules/better-sqlite3/**/*",
      "node_modules/@anthropic-ai/claude-agent-sdk/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64",
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64",
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "category": "Development"
    }
  }
}
